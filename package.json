{
  "name": "@openlab/catalyst-trello-scraper",
  "private": true,
  "version": "1.0.0",
  "description": "Scrapes a Trello list, parses label-relationships and stores into redis",
  "types": "dist/index.d.ts",
  "repository": "unplatform/catalyst-trello-scraper",
  "author": "Rob Anderson (https://r0b.io)",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "lint": "tsc --noEmit",
    "coverage": "jest --coverage",
    "preversion": "npm run lint && npm test -s",
    "postversion": "git push --follow-tags",
    "prettier": "prettier --write '**/*.{js,ts,tsx,json,css,md}'",
    "start": "node -r dotenv/config dist/cli.js",
    "test": "jest",
    "dev": "NODE_ENV=development ts-node -r dotenv/config src/cli.ts",
    "redis-cli": "docker-compose exec redis redis-cli",
    "gen-readme-toc": "md-toc -i"
  },
  "keywords": [
    "not-equal-catalyst",
    "trello",
    "scraper",
    "redis"
  ],
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "@openlab/trello-client": "^0.1.0",
    "axios": "^0.18.0",
    "chalk": "^2.4.2",
    "commander": "^2.19.0",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "ms": "^2.1.2",
    "node-cron": "^2.0.3",
    "redis": "^2.8.0",
    "valid-env": "^1.0.1"
  },
  "devDependencies": {
    "@robb_j/md-toc": "^0.3.1",
    "@types/debug": "^4.1.5",
    "@types/jest": "^24.0.23",
    "@types/ms": "^0.7.31",
    "@types/node": "^12.12.14",
    "@types/node-cron": "^2.0.2",
    "@types/redis": "^2.8.14",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
